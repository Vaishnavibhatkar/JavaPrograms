package Program;

public class Solution6 {

	public static void main(String[] args) 
	{
		int n=5;
		for( int i=1; i<=n; i++)
		{
		//numbers
			for(int j=1; j<=i; j++)
			{
				System.out.print(i);
			}
			System.out.println();
		}
			
	}

	
{
	
int n = 5;
for( int i=1; i<=n; i++)
	// Spaces
{
	for(int j=1; j<=n-i; j++)
	{
		System.out.print(" ");
	}
	// First Part
	for(int j=i; j>=1; j--)
	{
		System.out.print(j);
	}
	// Second Part
	for(int j=2; j<=i; j++)
	{
		System.out.print(j);
	}
	System.out.println();
	
}
}

