//check for palindrome: Write a java program to check if the elements of an array form a palindrome.
package array;

public class Palindrome 
{

	/*
	 * public static void main(String[] args) { int n=1212; int temp=n; int rev = 0
	 * , rem =0; while(temp!=0) { rem=temp%10; rev=rev*10 + rem; temp=temp/10; }
	 * if(n == rev) { System.out.println(" The NO is Palindrome"); } else {
	 * System.out.println(" the No is not Palindrome"); }
	 * 
	 * 
	 * 
	 * }
	 */
	static void palindrome(int a[], int n) {
		int temp=0;
		 for(int i=0;i<n/2 && n!=0;i++) {
			 if(a[i]!=a[n-i-1] ){
				 temp=1;
				 break;
			 }
		 }
		 if(temp==1) {
			 System.out.println("not ");
		 }else {
			 System.out.println("palindrome");
		 }
		 public static void main(String a[]) {
			 int arr[]= {1,2,1};
			 int n=arr.length;
			 palindrome(arr, n);
		 }

}
}