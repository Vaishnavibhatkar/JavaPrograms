package Pattern1;

public class star7 {

	public static void main(String[] args)
	{
		for(int i=1; i<=4; i++)
		{
			for(int j=4; j>=i; j--)
		    {
				if(j>i)
				{
				    System.out.print(" ");
			     }
		    //for(int k=1;k<=i;k++)
				else
		          {
		    	     System.out.print(" *");
		          }
		    System.out.println();
		}
		

	}
}


