package Pattern1;

public class star7 {

	public static void main(String[] args)
	{
		int n=4;
		for(int i=1; i<=n; i++)
		{
			for(int j=n; j>=i; j--)
			{
			if(j>i)
			{
				System.out.print(" ");
			}
			
			//for(int k=1; k<=i; k++)
			else
			{
				System.out.print(" *");
			}
			System.out.println();
		}
		}

	}

}
